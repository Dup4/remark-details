{
    "compilerOptions": {
        "target": "es2020",
        "module": "es2020",
        "declaration": true,
        "outDir": "./lib",
        "strict": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
    },
    "include": ["src/*", "src/**/*"]
}
